<% @page_title = "Delete Words" %>

<%= link_to("<< Back to Words List", {:action => 'index'}, :class => 'back-link') %>

<div class="word delete">
  <h2>Delete Words</h2>

  <%= form_for(:word, :url => {:action => 'destroy', :id => @word.id}) do |f| %>

    <p>Are you sure you want to permanently delete this?</p>

    <p class="reference-name"><%= @word.title %></p>

    <div class="form-buttons">
      <%= submit_tag 'Cancel' %>
      <%= submit_tag 'Delete' %>
    </div>

  <% end %>
</div>
